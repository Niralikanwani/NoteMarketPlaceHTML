@model NotesMarketPlace.Models.tbl_Users

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Meta tags  -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <!-- Title -->
    <title>Forgot Password | Notes-MarketPlace</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/Admin/images/logo/favicon.ico">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/Admin/css/bootstrap/bootstrap.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/Admin/css/style.css">

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/Content/Admin/css/responsive.css">
</head>

<body>
    <!-- Background Image -->
    <img class="bg-img" src="~/Content/Admin/images/login/banner-with-overlay.jpg" alt="Library">

    <!-- Forgot -->
    <section id="forgot">
        <div class="container">

            <div class="row text-center">
                <div class="col-md-12">
                    <div class="main-logo">
                        <a href="~/Admin/index">
                            <img class="img-fluid" src="~/Content/Admin/images/login/top-logo.png" alt="Notes MarketPlace Logo">
                        </a>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div id="forgot-box">
                        <p class="section-heading">Forgot Password?</p>

                        <p class="user-instruction">Enter your email to reset your password</p>

                        <form method="post" action="forgot">

                            <div class="form-group">

                                <label class="info-label" for="emailaddress">Email</label>

                                @Html.TextBoxFor(x => x.Email_id, new { @class = "form-control input-box-style", @id = "emailaddress", @placeholder = "Enter your email " })
                                @Html.ValidationMessage("Email_id", new { @style = "color:red" })

                            </div>

                            <div class="form-btn">
                                <button type="submit" class="btn btn-general btn-purple">Submit</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>

        </div>
    </section>

    <!-- Java-scripts -->
    <!-- JQuery -->
    <script src="~/Scripts/Admin/js/jquery.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/Scripts/Admin/js/bootstrap/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Scripts/Admin/js/script.js"></script>

    <!-- Java-scripts -->
</body>

</html>
