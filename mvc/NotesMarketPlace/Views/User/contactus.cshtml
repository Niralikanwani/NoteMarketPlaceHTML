@model NotesMarketPlace.Models.Contactus

<!DOCTYPE html>
<html lang="en">

<head>

    <!-- Meta tags  -->
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <!-- Title -->
    <title>Contact Us | Notes-MarketPlace</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/User/images/logo/favicon.ico">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- FontAwesome -->
    <link rel="stylesheet" href="~/Content/User/css/font-awesome/css/fontawesome.min.css">

    <!-- FontAwesome kit -->
    <script src="https://kit.fontawesome.com/4fa77e6d3c.js" crossorigin="anonymous"></script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/User/css/bootstrap/bootstrap.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/User/css/style.css">

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/Content/User/css/responsive.css">
</head>

<body>

    <section id="contact-us">

        <!-- Header -->
        <div class="only-white-nav">
            <header class="site-header">
                <div class="container">
                    <div class="header-wrapper">

                        <!-- Mobile Menu Open Button -->
                        <span id="mobile-nav-open-btn">&#9776;</span>

                        <div class="logo-wrapper">
                            <a href="~/User/index" title="Site Logo">
                                <img src="~/Content/User/images/logo/dark-logo.png" alt="Logo">
                            </a>
                        </div>
                        <div class="navigation-wrapper">
                            <nav class="main-nav">
                                <ul class="menu-navigation">
                                    <li>
                                        <a href="~/User/searchnotes">Search Notes</a>
                                    </li>
                                    <li>
                                        <a href="~/User/addnote">Sell Your Notes</a>
                                    </li>
                                    <li>
                                        <a href="~/User/faq">FAQ</a>
                                    </li>
                                    <li class="active">
                                        <a href="~/User/contactus">Contact Us</a>
                                    </li>
                                    <li>
                                        <a class="btn btn-general btn-purple" href="~/User/login" title="Download" role="button">Login</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>

                        <!-- Mobile Menu -->
                        <div id="mobile-nav">
                            <img class="logo-in-mobile-menu" src="~/Content/User/images/logo/dark-logo.png" alt="Notes Logo">
                            <!-- Mobile Menu Close Button -->
                            <span id="mobile-nav-close-btn">&times;</span>

                            <div id="mobile-nav-content">
                                <ul class="nav">
                                    <li>
                                        <a href="~/User/searchnotes">Search Notes</a>
                                    </li>
                                    <li>
                                        <a href="~/User/addnote">Sell Your Notes</a>
                                    </li>
                                    <li>
                                        <a href="~/User/faq">FAQ</a>
                                    </li>
                                    <li class="active">
                                        <a href="~/User/contactus">Contact Us</a>
                                    </li>
                                    <li>
                                        <a class="btn btn-general btn-purple" href="~/User/login" title="Download" role="button">Login</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
        </div>
        <!-- Header ends -->
        <!-- background -->
        <div class="small-height-bg">
            <p class="text-center">Contact Us</p>
        </div>
        <!-- background ends-->
        <!-- Get In touch box -->
        <div class="general-box">
            <div class="content-box-lg">

                <div class="container">
                    <div class="row">

                        <div class="col-md-12">
                            <p class="section-heading">Get in Touch</p>
                        </div>

                        <div class="col-md-12">
                            <p>Let us know how to get back to you</p>
                        </div>

                    </div>
                </div>

                <div class="container">

                    <form action="contactus" method="post">
                        <div class="row">

                            <div class="col-md-6 col-sm-6">

                                <div class="form-group">
                                    <label class="info-label" for="fullname">Full Name *</label>
                                    @if (Session["Email_id"] != null)
                                    {
                                        @Html.TextBoxFor(x => x.FullName, new { @Value = @Session["FullName"].ToString(), @class = "form-control input-box-style", @id = "fullname", @placeholder = "Enter your full name" })
                                    }
                                    else
                                    {
                                        @Html.TextBoxFor(x => x.FullName, new { @class = "form-control input-box-style", @id = "fullname", @placeholder = "Enter your full name" })
                                    }
                                </div>

                                <div class="form-group">
                                    <label class="info-label" for="emailaddress">Email Address *</label>
                                    @if (Session["Email_id"] != null)
                                    {
                                        @Html.TextBoxFor(x => x.Email_id, new { @Value = @Session["Email_id"].ToString(), @type = "email", @class = "form-control input-box-style", @id = "emailaddress", @placeholder = "Enter your email address" })
                                    }
                                    else
                                    {
                                        @Html.TextBoxFor(x => x.Email_id, new { @type = "email", @class = "form-control input-box-style", @id = "emailaddress", @placeholder = "Enter your email address" })
                                    }
                                </div>

                                <div class="form-group">
                                    <label class="info-label" for="subject">Subject *</label>

                                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control input-box-style", @id = "subject", @placeholder = "Enter your subject" })

                                </div>

                            </div>

                            <div class="col-md-6 col-sm-6">
                                <div class="form-group">
                                    <label class="info-label" for="comment-questions">Comments / Questions *</label>

                                    @Html.TextAreaFor(x => x.Question, new { @class = "form-control input-box-style",@rows="12", @id = "comment-questions", @placeholder = "Comments..." })

                                </div>
                            </div>

                            <div class="col-md-12 col-sm-12">
                                <div class="form-btn">
                                    <button type="submit" class="btn btn-general btn-purple">Submit</button>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>

            </div>
        </div>
        <!-- Get in touch box ends-->
        <!-- Footer -->
        <footer>
            <div class="container">
                <div class="row">

                    <div class="col-md-6 col-sm-8 col-12 text-left">
                        <p>Copyright &copy; TatvaSoft All Rights Reserved.</p>
                    </div>

                    <div class="col-md-6 col-sm-4 col-12 text-right">
                        <ul class="social-list">
                            <li>
                                <a class="facebook-img" href="#">
                                    <img src="~/Content/User/images/Homepage/facebook.png" alt="facebook">
                                </a>
                            </li>
                            <li>
                                <a class="twitter-img" href="#">
                                    <img src="~/Content/User/images/Homepage/twitter.png" alt="twitter">
                                </a>
                            </li>
                            <li>
                                <a class="linkedin-img" href="#">
                                    <img src="~/Content/User/images/Homepage/linkedin.png" alt="linkedin">
                                </a>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
        </footer>
        <!-- Footer Ends -->

    </section>

    <!-- Java-scripts -->
    <!-- JQuery -->
    <script src="~/Scripts/User/js/jquery.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/Scripts/User/js/bootstrap/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Scripts/User/js/script.js"></script>

    <!-- Java-scripts ends-->
</body>

</html>