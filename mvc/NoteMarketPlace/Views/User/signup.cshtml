@model NoteMarketPlace.Models.Signup
<!DOCTYPE html>
<html lang="en">

<head>

	<!-- Meta tags  -->
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
	
	<!-- Title -->
	<title>Signup | Notes-MarketPlace</title>

	<!-- Favicon -->
	<link rel="shortcut icon" href="~/Content/User/images/logo/favicon.ico">

	<!-- Fonts -->
	<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

	<!-- FontAwesome -->
	<link rel="stylesheet" href="~/Content/User/css/font-awesome/css/fontawesome.min.css">

	<!-- FontAwesome kit -->
	<script src="https://kit.fontawesome.com/4fa77e6d3c.js" crossorigin="anonymous"></script>

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="~/Content/User/css/bootstrap/bootstrap.min.css">

	<!-- Custom CSS -->
	<link rel="stylesheet" href="~/Content/User/css/style.css">

	<!-- Responsive CSS -->
	<link rel="stylesheet" href="~/Content/User/css/responsive.css">
</head>

<body>

	<!-- Background Image -->
	<img class="bg-img" src="~/Content/User/images/login/banner-with-overlay.jpg" alt=" Background Image">

	<!-- Signup Box -->
	<section id="signup">
		<div class="container">
		
			<div class="row text-center">
				<div class="col-md-12">
					<div class="main-logo">
						<a href="~/User/Index">
							<img class="img-fluid" src="~/Content/User/images/login/top-logo.png" alt="Notes MarketPlace Logo">
						</a>
					</div>
				</div>
			</div>
			
			<div class="row">
				<div class="col-md-12">
					<div id="signup-box">
					
						<p class="section-heading" >Create An Account</p>
						
						<p class="user-instruction">Enter your details to signup</p>
						
						<div class="success-msg">
							@Html.Raw(@ViewBag.IsSuccess)
						</div>
						
						<form  method="post">
							<div class="form-group">
								<label class="info-label" for="firstname">First Name *</label>

								@Html.TextBoxFor(x => x.FirstName, new { @class = "form-control input-box-style", @id = "firstname", @placeholder = "Enter your first name" })
								@Html.ValidationMessage("FirstName", new { @style = "color:red" })
							</div>
							
							<div class="form-group">
								<label class="info-label" for="lastname">Last Name *</label>

								@Html.TextBoxFor(x => x.LastName, new { @class = "form-control input-box-style", @id = "lastname", @placeholder = "Enter your last name" })
								@Html.ValidationMessage("LastName", new { @style = "color:red" })
							</div>
							
							<div class="form-group">
								<label class="info-label" for="emailaddress">Email *</label>

								@Html.TextBoxFor(x => x.Email_id, new { @type = "email", @class = "form-control input-box-style", @id = "emailaddress", @placeholder = "Enter your email address" })
								@Html.ValidationMessage("Email_id", new { @style = "color:red" })
							</div>
							
							<div class="form-group">
								<label class="info-label" for="password">Password</label>

								@Html.TextBoxFor(x => x.Password, new { @type = "password", @class = "form-control input-box-style", @id = "password", @placeholder = "Enter your password" })
								@Html.ValidationMessage("Password", new { @style = "color:red" })
								<div class="eye"><img class="eye-img" src="~/Content/User/images/login/eye.png" alt="eye"></div>
							</div>
							
							<div class="form-group">
								<label class="info-label" for="confirmpassword">Confirm Password</label>

								@Html.TextBoxFor(x => x.ConfirmPassword, new { @type = "password", @class = "form-control input-box-style", @id = "confirmpassword", @placeholder = "Re-enter your password" })
								@Html.ValidationMessage("ConfirmPassword", new { @style = "color:red" })
								<div class="eye"><img class="eye-img" src="~/Content/User/images/login/eye.png" alt="eye"></div>
							</div>
							
							<div class="form-btn">
								<button type="submit" class="btn btn-general btn-purple">Sign Up</button>
							</div>
							
						</form>
						
						<div class="toggle-btw-login-signup">
							<p>Already have an account? <span><a href="~/User/Login">Login</a></span></p>
						</div>
						
					</div>
				</div>
			</div>
			
		</div>
	</section>
	<!-- Signup Box Ends -->

	<!-- Java-scripts -->

	<!-- JQuery -->
	<script src="~/Scripts/User/js/jquery.js"></script>

	<!-- Bootstrap JS -->
	<script src="~/Scripts/User/js/bootstrap/bootstrap.min.js"></script>

	<!-- Custom JS -->
	<script src="~/Scripts/User/js/script.js"></script>

	<!-- Java-scripts ends-->
</body>

</html>